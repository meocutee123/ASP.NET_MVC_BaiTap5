
@{
    ViewBag.Title = "Banner";
}

@{
        var path = Server.MapPath("/Banners/banner.txt");
        var fileImage = System.IO.File.ReadAllText(path);
        ViewBag.image = "/Banners/" + fileImage;
    }   
<style>
    body {
        margin-top: 0px;
    }

    #banner {
        margin-top: 0px;
        height: 120px;
        background-color: aqua;
        float: left;
        width: 100%;
    }

    #menu {
        margin-top: 0px;
        float: left;
        width: 100%;
    }

    #footer {

        width: 100%;
        height: 30px;
        text-align: center;
        background-color: violet;
    }

    #content {
       
    }

    .colpos {
        position: relative;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
        float: left;
        width: 10%;
    }
    img{
        height: 120px;
        width: 100%;
        object-fit: cover;
    }
</style>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="margin-top:0px;">
    <div id="banner"><img src=@ViewBag.image /></div>
    <div id="menu">
        <div>
            @Html.ActionLink("TRANG CHỦ", "Index", "", htmlAttributes: new
           { @class = "a" }) &nbsp;|&nbsp;
            @Html.ActionLink("ĐĂNG KÝ", "Registration", "Ntu/Registration",
           new { @class = "a" })&nbsp;|&nbsp;
            @Html.ActionLink("GỬI EMAIL", "SendMail", "Ntu/SendMail", new
           { @class = "a" }) &nbsp;|&nbsp;
            @Html.ActionLink("THAY ĐỔI BANNER", "Banner",
           "Ntu/Banner", new { @class = "a" })
            <hr style="margin-top:0px;" />
        </div>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        <p>Copyright &copy; @DateTime.Now.Year</p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


